% iNap: persistent sodium current (source: unknown)
% Tags: sodium, current, intrinsic
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Parameters
gNap=.15; % mS/cm2
ENap=50; 
napshift=0;

% Functions
alpha(V)=.001*exp((-85-V)/30);
beta(V)=.0034./(exp((-17-V)/10)+1);
minf(V)=1./(1+exp(-(V+(55.7+napshift))/7.7));
INap(V,h)=gNap*minf(V).^3.*h.*(V-ENap);

% ODEs
hNap' = alpha(V).*(1-hNap)-beta(V).*hNap
hNap(0)=rand(Npop,1)

% Interface
current => -INap(V,hNap)
